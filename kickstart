echo "=][=  Installing Ansible"
echo ""
sudo apt-get -qq install -y ansible aptitude

echo ""
echo "=][=  Installing git and clone the repo"
echo ""
sudo apt-get -qq install -y git
git clone https://github.com/thecoshman/zipper.git

echo ""
echo "=][=  Running bootstrap playbook"
cd zipper/ansible
sudo ansible-playbook boot_strap.yml -i inventory
