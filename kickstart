#!/bin/bash

echo "    Self deleting to be nice and clean, you should never need to run this again"
rm -- "$0"

echo "    Installing Ansible"
sudo apt-get install -y software-properties-common
sudo apt-add-repository -y ppa:ansible/ansible
sudo apt-get update -y
sudo apt-get install -y ansible

echo "    Installing git and cloning the repo"
sudo apt-get install -y git
git clone https://github.com/thecoshman/zipper.git

echo "    Running bootstrap playbook"
cd zipper
echo "    Well... once it's wrote..."
